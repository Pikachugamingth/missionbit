# Exercise 1

# We've defined the variable "meal" here to the name of the food we ate for breakfast!
meal = "Bacon and eggs"

# Printing out breakfast
print("Breakfast:")
print(meal)

# Now update meal to be lunch!
meal = "Pork and rice"
# Printing out lunch
print("Lunch:")
print(meal)

# Now update "meal" to be dinner
meal = "Beef, rice, and wasabi peas"
# Printing out dinner
print("Dinner:")
print(meal)

# Exercise 2

# Time for a weather report
weather = "Sunny"
temperature = "75"

# Print weather
print("Weather is " + weather + " and " + temperature + " degrees")

# Check what the weather is outside and update weather and temperature
weather = "Windy"
temperature = "65"
# Print weather
print("Weather now is " + weather + " and " + temperature + " degrees")
